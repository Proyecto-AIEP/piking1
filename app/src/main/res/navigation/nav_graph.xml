<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pikingmovil.view.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <!-- Acciones de navegaciÃ³n desde el LoginFragment -->
        <action
            android:id="@+id/action_loginFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_loginFragment_to_supervisorFragment"
            app:destination="@id/supervisorFragment" />
        <action
            android:id="@+id/action_loginFragment_to_logisticaFragment"
            app:destination="@id/logisticaFragment" />
        <action
            android:id="@+id/action_loginFragment_to_pickerFragment"
            app:destination="@id/pickerFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.pikingmovil.view.Admin.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" />

    <fragment
        android:id="@+id/supervisorFragment"
        android:name="com.example.pikingmovil.view.Supervisor.SupervisorFragment"
        android:label="fragment_supervisor"
        tools:layout="@layout/fragment_supervisor" />

    <fragment
        android:id="@+id/logisticaFragment"
        android:name="com.example.pikingmovil.view.Logistica.LogisticaFragment"
        android:label="fragment_logistica"
        tools:layout="@layout/fragment_logistica" />

    <fragment
        android:id="@+id/pickerFragment"
        android:name="com.example.pikingmovil.view.Picker.PickerFragment"
        android:label="fragment_picker"
        tools:layout="@layout/fragment_picker" />

</navigation>

